<p id = "notice"><%= notice %></p>

<h1>Books</h1>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
   </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td class = "index-btn">
       <p><%= link_to "Show", book_path(book) %></p>
       <p><%= link_to "Edit", edit_book_path(book) %></p>
       <p><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure ?" %></p>
     </td>
    </tr>
   </tbody>
 <% end %>
 </table>


<span class ="book-index-newbtn"><%= render 'new', book: @book %></span>

