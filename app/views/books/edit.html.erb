<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch, local:true do |f| %>
<%= render 'layouts/error_messages', book: @book %>
 <div class = "edit-book">
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4 class = "book-edit">Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>
 </div>
<% end %>
  <div class = "index-btn">
   <p><%= link_to "Show", book_path(@book) %></p>
    <p> | </p>
   <p><%= link_to "Back", books_path %></p>
  </div>
