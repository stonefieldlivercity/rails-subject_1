<h1>Editing Book</h1>

<% form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

  <h4 class = "book-edit">Title</h4>
  <%= f.text_field :title %>

  <h4 class = "book-edit">Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>


   <p><%= link_to "show", show_book_path %></p>
   <p><%= link_to "back", book_path %></p>

<% end %>